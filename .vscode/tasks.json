{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${file}",
				"-fsanitize=address,undefined",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"${workspaceFolder}/sock_wrap.cpp",
				"${workspaceFolder}/table.cpp",
				"${workspaceFolder}/parser.cpp",
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}